<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Merchant</th>
      <th>Description</th>
      <th>Amount</th>
    </tr>
  </thead>
  <tbody>
    <% @transactions.each do |transaction| %>
    <tr>
        <td><a href="/transactions/<%= transaction.id %>"><%= transaction.category.name %></a></td>
        <td><a href="/transactions/<%= transaction.id %>"><%= transaction.merchant.name %></a></td>
        <td><a href="/transactions/<%= transaction.id %>"><%= transaction.description %></a></td>
        <td><a href="/transactions/<%= transaction.id %>"><%= transaction.amount %></a></td>
    </tr>    
    <% end %>
  </tbody>
</table>