<table class="table">
  <thead>
    <tr>
      <th><a href="/analyses/?sort=category&order=<%= @sort_order %>">Category</th>
      <th><a href="/analyses/?sort=merchant&order=<%= @sort_order %>">Merchant</th>
      <th>Transaction</th>
      <th><a href="/analyses/?sort=amount&order=<%= @sort_order %>">Amount</a></th>
    </tr>
  </thead>
  <tbody>
    <% @analysis.transactions.each do |transaction| %>
    <tr>
        <td><a href="/categories/<%= transaction.category.id %>"><%= transaction.category.name %></a></td>
        <td><a href="/merchants/<%= transaction.merchant.id %>"><%= transaction.merchant.name %></a></td>
        <td><a href="/transactions/<%= transaction.id %>"><%= transaction.description %></a></td>
        <td><a href="/transactions/<%= transaction.id %>"><%= transaction.amount %></a></td>
    </tr>    
    <% end %>
    <tr>
      <td></td>
      <td></td>
      <td class="total_label">Total:</td>
      <td class="total_display"><%= @analysis.total %></td>
    </tr>
  </tbody>
</table>